<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Qliniqueue.Views.DoctorsPage">
    <StackLayout>
        <Frame BackgroundColor="#5A97B1" Padding="24" CornerRadius="0">
            <Label Text="Doctors" HorizontalTextAlignment="Center"
                       TextColor="White" FontSize="25"/>
        </Frame>
        <ListView x:Name="lvDoctors" Margin="20" RowHeight="80">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" >
                            <Image Source="{Binding imageURL}" HeightRequest="150"/>
                            <Label x:Name="lblName"  Text="{Binding name}" VerticalOptions="Center" FontSize="15"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>